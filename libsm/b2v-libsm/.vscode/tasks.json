{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate libsm buildsystem",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build libsm project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/",
                "-j15"
            ],
            "dependsOn": [
                "SaveAllFiles"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
